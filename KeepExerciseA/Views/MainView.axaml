<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:iocn="https://github.com/projektanker/icons.avalonia"
             xmlns:lc="using:KeepExerciseA.Converters"
             xmlns:lvm="using:KeepExerciseA.Library.ViewModels"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             DataContext="{Binding MainViewModel, Source={StaticResource ServicesLocator}}"
             x:Class="KeepExerciseA.Views.MainView">
    
    <UserControl.Resources>
        <lc:CountToBoolConverter x:Key="CountToBoolConverter"></lc:CountToBoolConverter>
    </UserControl.Resources>
             
    <SplitView IsPaneOpen="{Binding IsPaneOpen,Mode=TwoWay}">
        <SplitView.Pane>
           <Grid>
               <Grid.RowDefinitions>
                   <RowDefinition Height="50"></RowDefinition>
                   <RowDefinition Height="*"></RowDefinition>
               </Grid.RowDefinitions>
               <Grid Grid.Row="0">
                   <Grid.ColumnDefinitions>
                       <ColumnDefinition Width="50"></ColumnDefinition>
                       <ColumnDefinition Width="*"></ColumnDefinition>
                   </Grid.ColumnDefinitions>
                   <Button Grid.Column="0" Background="Turquoise"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"
                           Command="{Binding ClosePaneCommand}">
                       <iocn:Icon 
                           Foreground="AliceBlue"
                           Value="fa-x"></iocn:Icon>
                   </Button>
                   <Grid Grid.Column="1">
                       <Label Foreground="Turquoise" 
                              VerticalAlignment="Center" FontSize="20" 
                              Margin="10,0,0,0" 
                              Content="KeepExercise">
                       </Label>
                   </Grid>
               </Grid>
               <ListBox Grid.Row="1" 
                        SelectedItem="{Binding SelectedMenuItem}"
                        ItemsSource="{Binding Source={x:Static lvm:MenuItem.MenuItems}}">
                   <i:Interaction.Behaviors>
                       <ia:EventTriggerBehavior EventName="Tapped">
                           <ia:InvokeCommandAction Command="{Binding OnMenuItemCommand}"></ia:InvokeCommandAction>
                       </ia:EventTriggerBehavior>
                   </i:Interaction.Behaviors>
                   <ListBox.ItemTemplate>
                       <DataTemplate>
                           <Label Content="{Binding Name}"
                                  FontSize="20"
                                  Margin="50,0,0,0"
                                  VerticalAlignment="Center">
                               
                           </Label>
                       </DataTemplate>
                   </ListBox.ItemTemplate>
               </ListBox>
           </Grid>
        </SplitView.Pane>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Width="50" VerticalAlignment="Stretch"
                        Command="{Binding OpenPaneCommand}">
                    <iocn:Icon Foreground="Aqua" Value="fa-bars"></iocn:Icon>
                </Button>
                <Button Grid.Column="1" Width="50" VerticalAlignment="Stretch"
                        Command="{Binding GoBackCommand}"
                        IsVisible="{Binding ContentStack.Count,Converter={StaticResource CountToBoolConverter},ConverterParameter=1}">
                    <iocn:Icon Foreground="Aqua" Value="fa-arrow-left"></iocn:Icon>
                </Button>
                <Grid Grid.Column="2" Background="Aqua">
                    <Label Foreground="AliceBlue"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Margin="10,0,0,0"
                           Content="{Binding Title}">
                    </Label>
                </Grid>
            </Grid>
            <ContentControl Grid.Row="1"
                            Content="{Binding Content}">
                
            </ContentControl>
        </Grid>
        
    </SplitView>
    
</UserControl>
 