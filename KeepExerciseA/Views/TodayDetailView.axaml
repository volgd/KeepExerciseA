<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KeepExerciseA.Views.TodayDetailView"
             DataContext="{Binding TodayDetailViewModel, Source={StaticResource ServicesLocator}}">
    <ScrollViewer>
        <StackPanel Margin="8">
            <Label FontSize="18"
                   Margin="0,0,0,8"
                   HorizontalAlignment="Center"
                   Content="{Binding TodayExerciseTips.Content}" />
            <Label FontSize="18"
                   Margin="0,0,0,8"
                   HorizontalAlignment="Center"
                   Content="{Binding TodayExerciseTips.Warning}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
