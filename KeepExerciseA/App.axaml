<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="KeepExerciseA.App"
             xmlns:local="using:KeepExerciseA"
             xmlns:semi="https://irihi.tech/semi"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

             
    <Application.Resources>
        <ResourceDictionary>
            <local:ServicesLocator x:Key="ServicesLocator"></local:ServicesLocator>
        </ResourceDictionary>
    </Application.Resources>
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude 
            Source="avares://AvaloniaInfiniteScrolling.Control/AvaloniaInfiniteScrollControlStyle.axaml">
        </StyleInclude>
        <semi:SemiTheme Locale="zh-CN"/>
    </Application.Styles>
</Application>